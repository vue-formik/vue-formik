{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "lib/**/*",
    "lib/**/*.vue"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "esnext",
    "paths": {
      "@/*": ["./lib/*"]
    }
  }
}
